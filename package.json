{
	"name": "autorules",
	"version": "1.1.0",
	"type": "module",
	"description": "Automated code quality checking with AI",
	"main": "dist/cli.js",
	"bin": {
		"autorules": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"tidy": "npm run lint:fix && npm run format:fix && npm run check:fix",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"ai",
		"code-quality",
		"automation",
		"linting"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@markwylde/ailib": "^1.6.0",
		"glob": "^11.0.3",
		"marked": "^16.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@types/node": "^24.6.2",
		"typescript": "^5.9.3"
	}
}
